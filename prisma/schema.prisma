generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  username      String?      @unique
  email         String       @unique
  bio           String?
  numberPhone   String?
  lokasi        String?
  proyekTani    ProyekTani[]
  feeds         Feed[]
  comments      Comment[]
  likes         Like[]
  produks       Produk[]
  role          Role?        @default(PETANI)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now()) @updatedAt
  name          String
  emailVerified Boolean      @default(false)
  image         String?
  sessions      Session[]
  accounts      Account[]

  @@map("user")
}

model ProyekTani {
  id         String       @id @default(cuid())
  namaProyek String
  deskripsi  String
  petaniId   String
  lokasi     String
  image      String?
  status     ProyekStatus @default(PERSIAPAN)
  petani     User         @relation(fields: [petaniId], references: [id], onDelete: Cascade)
  faseProyek FaseProyek[]
  produk     Produk[]
  feeds      Feed[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([petaniId])
}

model FaseProyek {
  id           String     @id @default(cuid())
  namaFase     String
  deskripsi    String
  proyekTaniId String
  gambarFase   String[]
  urutanFase   Int
  status       FaseStatus @default(BELUM_DIMULAI)
  proyekTani   ProyekTani @relation(fields: [proyekTaniId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([proyekTaniId])
}

model Produk {
  id           String       @id @default(cuid())
  namaProduk   String
  deskripsi    String
  harga        Float
  status       StatusProduk @default(TERSEDIA)
  unit         String
  gambarProduk String[]
  proyekTaniId String
  proyekTani   ProyekTani   @relation(fields: [proyekTaniId], references: [id], onDelete: Cascade)
  petaniId     String
  petani       User         @relation(fields: [petaniId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // biar nanti bisa sort produk cepat
  @@index([proyekTaniId])
  @@index([createdAt])
  @@index([harga])
  @@index([petaniId])
}

model Feed {
  id        String      @id @default(cuid())
  content   String
  authorId  String
  imageFeed String[]
  projectId String?
  project   ProyekTani? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  author    User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments  Comment[]
  likes     Like[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([authorId])
  @@index([projectId])
  @@index([authorId, createdAt])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  feedId    String
  feed      Feed     @relation(fields: [feedId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([feedId])
  @@index([authorId])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  feedId    String
  feed      Feed     @relation(fields: [feedId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  // cegah like duplikat
  @@unique([userId, feedId])
  @@index([feedId])
  @@index([userId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

enum Role {
  PETANI
  PEMBELI
  ADMIN
}

enum ProyekStatus {
  PERSIAPAN
  PENANAMAN
  PEMELIHARAAN
  PANEN
  SELESAI
}

enum FaseStatus {
  BELUM_DIMULAI
  BERJALAN
  SELESAI
}

enum StatusProduk {
  TERJUAL
  TERSEDIA
  BELUM_TERSEDIA
}
